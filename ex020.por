programa
{
	
	funcao inicio()
	{
		inteiro num
		escreva("Digite um número: ")
		leia(num)
		se (num % 2 == 0) {
			escreva("PAR!")
		} senao {
			escreva("ÍMPAR!")
		}
	}
}
